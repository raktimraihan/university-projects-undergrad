<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.needyserve.android.needyserve">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".finallyEnd"></activity>
        <activity android:name=".CheckoutVolunteer" />
        <activity android:name=".VolunteerItemListAll" />
        <activity android:name=".MyDonation" />
        <activity android:name=".AboutUs" />
        <activity android:name=".Infographic" />
        <activity android:name=".ContactUs" />
        <activity android:name=".DonateLeftover" />
        <activity android:name=".Loading" />
        <activity
            android:name=".com.needyserve.android.instances.LandingNavigationDrawer"
            android:label="@string/title_activity_landing_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Register" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>