<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Infographic">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="IMPACT"
                android:textAlignment="viewEnd"
                android:textColor="#eba834"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="YOUR"
                android:textAlignment="viewEnd"
                android:textColor="#eba834"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="We want you to be proud \n of the inpact you make \n with needy serve"
                android:textAlignment="viewEnd"
                android:textAllCaps="true"
                android:textColor="#493D34"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="#FFC107"
                android:backgroundTint="#FFEB3B"
                android:text="WHEN DONATE A SINGLE SERVING OF LEFTOVER FOOD, YOU:"
                android:textAlignment="viewEnd"
                android:textAllCaps="true"
                android:textColor="#121211"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/slide2" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/slide1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                app:srcCompat="@drawable/slide3" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/slide4" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/slide5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="All the statistics are based on different research \ndone by: \n\nOzHarvest.org \nWorldhunger.org \nFAO.org "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:fontFamily="sans-serif"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>